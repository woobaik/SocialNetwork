<div class="container">
    <div class="row">
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <img src="http://materializecss.com/images/office.jpg" />
                </div>
                <div class="card-content">
                    <div class="card-title"><%= current_user.name %></div>
                    <p>e-mail : <%= current_user.email %></p>
                    <p>Total Posts : <%= @posts_count %></p>

                    <%= link_to new_post_path do %>
                        <button class="btn">New Post</button>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col s12 m8">
            <% @posts.each do |post| %>
                <div class="card">
                    <div class="card-content">
                        <span class="card-title"><%= post.user.name %></span>
                        <span><%= post.created_at %></span>
                        <p class="pre-line"><%= post.content %></p>
                    </div>

                    <div class="card-action">
                        <a href="#">LIKE IT!</a>
                        <% if current_user.id == post.user_id %>
                          <%= link_to 'Delete', post_url(post), method: "Delete", class: "right"  %>
                          <%= link_to 'Modify', edit_post_url(post), class: "right" %>
                        <% end %>
                        <a href="#">Comment</a>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
